<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigateToTampons">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="20dp"
        android:text="Go to:"
        android:textStyle="bold"
        android:textColor="#00BCD4"
        android:textSize="40sp" />

    <Button
        android:id="@+id/navToShelterButton"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="goToShelter"
        android:padding="15dp"
        android:text="Shelters"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="30sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>


    <Button
        android:id="@+id/navToClinicButton"
        android:onClick="goToClinic"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/navToShelterButton"
        android:layout_alignStart="@+id/navToShelterButton"
        android:layout_below="@+id/navToShelterButton"
        android:layout_marginTop="34dp"
        android:padding="15dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Clinics"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:id="@+id/navToCenterButton"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/navToClinicButton"
        android:layout_alignStart="@+id/navToClinicButton"
        android:layout_below="@+id/navToClinicButton"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="goToStudentCenter"
        android:padding="12dp"
        android:text="Women's Centers"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

</RelativeLayout>